                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.FullName</td>
                    <td>@customer.Username</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>@customer.Gender</td>
                    <td>@customer.Address</td>
