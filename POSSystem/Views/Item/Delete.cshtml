@model POSSystem.Models.Item_Management.Item
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Item</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h2>Delete Item</h2>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <p>Are you sure you want to delete this item?</p>
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.ItemName</dd>
                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Model.Description</dd>
                <dt class="col-sm-2">Unit Price</dt>
                <dd class="col-sm-10">@Model.UnitPrice</dd>
                <dt class="col-sm-2">Stock Qty</dt>
                <dd class="col-sm-10">@Model.StockQty</dd>
            </dl>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
